<%- include("template/cabecera" ,{tituloWeb: "Panel de AdministraciÃ³n" }) %>

    <div class="container">

        <h1>CRUD MongoDB</h1>
        <a class="btn btn-success btn-block my-4" href="/crear">
            Crear nueva marca</a>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Origen</th>
                    <th scope="col">Estilo</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>

                <% if (arrayVintage.length> 0) { %>
                    <% arrayVintage.forEach(marca=> { %>

                        <tr>
                            <th scope="row"><%= marca.id %></th>
                            <td><%= marca.nombre %></td>
                            <td><%= marca.origen %></td>
                            <td><%= marca.estilo%></td>
                            <td><%= marca.descripcion%></td>
                            <td><a class="btn btn-warning btn-sm" href="vintage/<%= marca._id %>">Editar/Eliminar</td>
                        </tr>

                        <% }) %>
                            <% } %>
            </tbody>
        </table>
    </div>
    
    <%-include("template/footer") %>